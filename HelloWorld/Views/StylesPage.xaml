<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="HelloWorld.Views.StylesPage">
	
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style x:Key="CustomLabelStyle"
					TargetType="Label">
				<Setter Property="TextColor" 
					Value="Purple"/>
				<Setter Property="FontSize" 
					Value="50"/>
			</Style>
			<Style x:Key="CustomEntryStyle"
					TargetType="Entry">
				<Setter Property="TextColor" 
					Value="Navy"/>
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>

	<StackLayout Orientation="Vertical"
			HorizontalOptions="Center"
			VerticalOptions="Center">

		<Label Text="Name"
			Style="{StaticResource CustomLabelStyle}"/>
		<Entry Text="Harrison" 
			Style="{StaticResource CustomEntryStyle}"/>
		<Label Text="Surname"
			Style="{StaticResource CustomLabelStyle}"/>
		<Entry Text="Wells" 
			Style="{StaticResource CustomEntryStyle}"/>
		<Label Text="Email"
			Style="{StaticResource CustomLabelStyle}"/>
		<Entry Text="Harrison.Wells@gmail.com" 
			Style="{StaticResource CustomEntryStyle}"/>
		
	</StackLayout>
</ContentPage>
